}

@Article{Patrianakos_2011,
  author          = {Patrianakos, G. and Kostoglou, M. and Konstandopoulos, A.},
  title           = {One-dimensional model of solar thermal reactors for the co-production of hydrogen and carbon black from methane decomposition},
