@Article{Tuerk_2002a,
  author          = {Türk, M.a and Helfgen, B.b and Hils, P.a and Lietzow, R.a and Schaber, K.a},
  title           = {Micronization of pharmaceutical substances by rapid expansion of supercritical solutions (RESS): Experiments and modeling},
  journal         = {Particle and Particle Systems Characterization},
