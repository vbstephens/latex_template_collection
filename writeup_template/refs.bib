  source          = {Scopus},
  url             = {https://www.scopus.com/inward/record.uri?eid=2-s2.0-61649083017&doi=10.1016%2fj.toxlet.2008.11.021&partnerID=40&md5=855a1a1d256a53bcd0ead636ccb776fb},
}

@Article{Melikhov_2010,
