  document_type = {Article},
  source        = {Scopus},
  url           = {https://www.scopus.com/inward/record.uri?eid=2-s2.0-0032309948&partnerID=40&md5=29e8cc7dfb902145d46d488b94d3ca2c},
}

@Article{Sung_2014,
  author   = {Sung, Yonduck and Raman, Venkat and Koo, Heeseok and Mehta, Maulik and Fox, Rodney O.},
