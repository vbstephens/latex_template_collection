@Article{Sohn_2010,
  author          = {Sohn, H.Y. and Perez-Fontes, S. and Choi, J.W.},
  title           = {Computational fluid dynamic modeling of a chemical vapor synthesis process for aluminum nanopowder as a hydrogen storage precursor},
