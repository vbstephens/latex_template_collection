@Conference{Gallacher_2014,
  author       = {Gallacher, Jonathan R. and Lansinger, Victoria and Hansen, Sydney and Weise, David R. and Fletcher, Thomas H.},
  title        = {Effects of season and heating mode on ignition and burning behavior of ten species of live fuel measured in a flat-flame burner system},
  booktitle    = {2014 Spring Technical Meeting of the Western States Section of the Combustion Institute},
  year         = {2014},
  address      = {Pasadena, CA},
  month        = mar,
  organization = {The Combustion Institute},
  abstract     = {The effect of season and heating mode on ignition and burning behavior of living vegetation were studied in a flat-flame burner system with a radiant panel. The goal is to identify what plant characteristics have the greatest influence on burning behavior and to summarize the effects of heating mode on ignition and burning. Experiments were performed over a one-year period, with 25 runs completed for lodgepole pine, big sagebrush, and chamise each month. A flat flame burner (1000 °C, 10 mol% O2) and radiant panel (39-50 kW/m2) provide the convection and radiation sources, respectively. Time-dependent mass, surface temperature and flame characteristics were measured. Moisture content (dry basis) was found to vary with season and location, with the lowest measured moisture content corresponding to the local fire season. The effect of moisture content on ignition time and temperature varied with species. Ignition time and temperature showed a strong dependence on heating mode. Flame characteristics were affected by heating mode and moisture content, and the dependence varied by season and species.},
  file         = {:Gallacher_2014_effect_of_season_and_heating_mode.pdf:PDF},
}

