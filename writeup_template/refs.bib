  author_keywords = {Disturbance and average particle diameter; Method of moments; Particle size distribution; Population balance equation},
  document_type   = {Article},
  doi             = {10.1166/jctn.2011.1650},
  file            = {:Sadiku_2011_canoparticle_growth_reduced_population_balance_model.pdf:PDF},
  source          = {Scopus},
  url             = {https://www.scopus.com/inward/record.uri?eid=2-s2.0-84856824404&doi=10.1166%2fjctn.2011.1650&partnerID=40&md5=d4d233ea5432bbe8de747fa8c16b6a4d},
}

@Article{Gautier_2016,
  author        = {Gautier, M. and Rohani, V. and Fulcheri, L. and Trelles, J.P.},
  title         = {Influence of temperature and pressure on carbon black size distribution during allothermal cracking of methane},
  journal       = {Aerosol Science and Technology},
  year          = {2016},
  volume        = {50},
  number        = {1},
  pages         = {26-40},
  abstract      = {Allothermal cracking of methane is a suitable and eco-friendly way to simultaneously produce hydrogen and carbon black. The economic viability of the process relies on the ability to produce carbon black having well-defined characteristics, particularly concerning the particle size. A model for the study of the carbon particle size distribution during thermal cracking of methane has been developed. The model takes into account: heat transfer by conduction, convection, particle and gas radiation, homogenous and heterogenous reactions of methane dissociation, nucleation, and growth of solid carbon particle formed. The model alleges nanoparticles are in thermal equilibrium and do not impact the flow. A parametric study is made on operating pressure and temperature. As a result, the increase of the pressure and temperature increases the yield of thermal methane cracking. Moreover, results show a particle size distribution becoming narrower with increasing temperature and/or pressure. In these conditions, the particles population tends to be monodispersed. © 2016 Taylor & Francis Group, LLC.},
