  doi             = {10.1002/1521-4117(200211)19:5<327::AID-PPSC327>3.0.CO;2-V},
  source          = {Scopus},
  url             = {https://www.scopus.com/inward/record.uri?eid=2-s2.0-0036858167&doi=10.1002%2f1521-4117%28200211%2919%3a5%3c327%3a%3aAID-PPSC327%3e3.0.CO%3b2-V&partnerID=40&md5=5a87df01bb26730c6aaf1414f9486ee6},
