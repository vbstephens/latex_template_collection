  file            = {:Cui_2014_numerical_analysis_FEM.pdf:PDF},
  source          = {Scopus},
  url             = {https://www.scopus.com/inward/record.uri?eid=2-s2.0-84888168860&doi=10.1016%2fj.cam.2013.10.045&partnerID=40&md5=bdb3112eea42ae56cc366fad1043bb64},
}

@Article{Sadiku_2011,
