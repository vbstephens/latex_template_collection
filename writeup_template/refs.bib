  author_keywords = {Crystallization; Hydrogenated palm oil; Modeling; PGSS},
  document_type   = {Article},
  doi             = {10.1016/j.supflu.2004.01.004},
  source          = {Scopus},
  url             = {https://www.scopus.com/inward/record.uri?eid=2-s2.0-14344250094&doi=10.1016%2fj.supflu.2004.01.004&partnerID=40&md5=d7a39702c1b26263c4a2a7d09590472d},
}

@InProceedings{Senior_2005,
  author       = {Constance L. Senior and David O. Lignell and Zumao Chen and Adel F. Sarofim and Todd W. Dixon},
  title        = {Characterization of reactivity of green and calcined petroleum coke with oxygen for application to combustion systems},
  booktitle    = {Light Metals 2005: Proceedings of the technical sessions presented by the TMS Aluminum Committee at the 134the TMS Annual Meeting},
  year         = {2005},
  editor       = {Halvor Kvande},
  pages        = {597-600},
  month        = feb,
  organization = {The Minerals, Metals \& Matericals Society},
  publisher    = {TMS},
  abstract     = {Petroleum coke combustion differs from coal combustion because of the inherent properties of the fuel. The lower volatile content of petroleum coke and the lower surface area of the char relative to coal make petroleum coke more difficult to ignite than coal and require longer burnout times relative to coal. Green cokes generally have volatile matter in the range of 8-10%, whereas calcined cokes have on the order of 1% volatile matter. This paper presents information on petroleum coke combustion kinetics that was obtained from combustion of petroleum coke char samples under well-controlled conditions. Green petroleum coke reactivity was higher than that of calcined coke, but lower than coal. Measured reactivities were used to model the combustion of petroleum coke and to explore the effects of particle size and temperature on burnout time.},
