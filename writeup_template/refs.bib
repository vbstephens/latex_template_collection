  author_keywords = {Aerosol; Coagulation; Condensation; Extinction coefficient; Moment method; Visibility},
  document_type   = {Article},
  doi             = {10.1016/j.jaerosci.2005.03.014},
  source          = {Scopus},
  url             = {https://www.scopus.com/inward/record.uri?eid=2-s2.0-31344436212&doi=10.1016%2fj.jaerosci.2005.03.014&partnerID=40&md5=c417e39d76c9b8e9e40a194ac5f4aebc},
}

@Article{Matsui_1987,
  author   = {K. Matsui and H. Tsuji},
  title    = {An aerothermochemical analysis of solid carbon combustion in the stagnation flow accompanied by homogeneous CO oxidation},
  journal  = {Combustion and Flame},
  year     = {1987},
