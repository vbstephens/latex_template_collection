  author_keywords = {Actuator constraints; Controller reconfiguration; Crystallization; Fault detection; Method of moments; Model reduction; Nonlinear control; Partial-integro differential equations; Particle size distribution; Particulate processes; Residual generation; Stability region; State estimation},
