@Article{Yu_2008a,
  author          = {Yu, M.-Z.a and Lin, J.-Z.a b and Chan, T.-L.c},
  title           = {Effect of precursor loading on non-spherical TiO2 nanoparticle synthesis in a diffusion flame reactor},
  journal         = {Chemical Engineering Science},
