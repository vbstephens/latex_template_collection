  document_type = {Article},
  doi           = {10.1080/02786826.2015.1123214},
  file          = {:Gautier_2016_carbon_black_size_distribution.pdf:PDF},
  source        = {Scopus},
  url           = {https://www.scopus.com/inward/record.uri?eid=2-s2.0-84954413232&doi=10.1080%2f02786826.2015.1123214&partnerID=40&md5=ba8f3975c5368adc596f71660beecd9f},
}

@Article{Falola_2013,
  author          = {Falola, A. and Borissova, A. and Wang, X.Z.},
