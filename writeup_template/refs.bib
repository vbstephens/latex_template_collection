  file     = {:Mazumder_1999_TRI_nonreacting_combustion_gases.pdf:PDF},
  keywords = {TRI, nonreacting combustion gases},
  url      = {http://heattransfer.asmedigitalcollection.asme.org/article.aspx?articleID=1443819},
}

@Article{Schmidt_2010,
  author   = {Rodney C. Schmidt and Alan R. Kerstein and Randall McDermott},
  title    = {ODTLES: A multi-scale model for 3D turbulent flow based on one-dimensional turbulence modeling},
