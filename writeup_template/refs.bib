  author_keywords = {Astrochemistry; Molecular processes; Planets and satellites: atmospheres; Planets and satellites: individual (Titan)},
  document_type   = {Article},
  doi             = {10.1088/0004-637X/728/2/80},
  source          = {Scopus},
  url             = {https://www.scopus.com/inward/record.uri?eid=2-s2.0-84860239540&doi=10.1088%2f0004-637X%2f728%2f2%2f80&partnerID=40&md5=bcc7c85231ef5a0218403e91b3a91330},
}

@Article{Iskander_1989,
