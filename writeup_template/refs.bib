}

@Article{Erriguible_2009,
  author          = {Erriguible, A.a and Marias, F.b and Cansell, F.c and Aymonier, C.c},
  title           = {Monodisperse model to predict the growth of inorganic nanostructured particles in supercritical fluids through a coalescence and aggregation mechanism},
