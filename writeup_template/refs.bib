}

@Article{Teleki_2009,
  author        = {Teleki, A.a and Suter, M.b and Kidambi, P.R.a and Ergeneman, O.c and Krumeich, F.a and Nelson, B.J.c and Pratsinis, S.E.a},
  title         = {Hermetically coated superparamagnetic Fe2O3 particles with SiO2 nanofilms},
  journal       = {Chemistry of Materials},
  year          = {2009},
  volume        = {21},
  number        = {10},
  pages         = {2094-2100},
  abstract      = {Magnetic nanoparticles are frequently coated with SiO2 to improve their functionality and biocom-patibility in a range of biomedical and polymer nanocomposite applications. In this paper, a scalable flame aerosol technology is used to produce highly dispersible, superparamagnetic iron oxide nanoparticles hermetically coated with silica to retain full magnetization performance. Iron oxide particles were produced by flame spray pyrolysis of iron acetylacetonate in xylene/acetonitrile solutions and the resulting aerosol was in situ coated with silicon dioxide by oxidation of swirling hexamethlydisiloxane vapor. The process allows independent control of the core Fe2O3 (maghemite) particle properties and the thickness of their silica coating film. This ensures that the nonmagnetic SiO2 layer can be closely controlled and minimized. The optimal SiO2 content for complete (hermetic) encapsulation of the magnetic core particles was determined by isopropanol chemisorption. The magnetization of Fe 2O3 coated with about 2 nm thin SiO2 layers was nearly identical to that of uncoated, pure Fe2O3 nanoparticles. © 2009 American Chemical Society.},
  affiliation   = {Particle Technology Laboratory, Department of Mechanical and Process Engineering, ETH Zurich, Sonneggstrasse 3, CH-8092 Zurich, Switzerland; Micro- and Nanosystems, Department of Mechanical and Process Engineering, ETH Zurich, Sonneggstrasse 3, CH-8092 Zurich, Switzerland; Institute of Robotics and Intelligent Systems, Department of Mechanical and Process Engineering, ETH Zurich, Sonneggstrasse 3, CH-8092 Zurich, Switzerland},
  document_type = {Article},
  doi           = {10.1021/cm803153m},
  source        = {Scopus},
  url           = {https://www.scopus.com/inward/record.uri?eid=2-s2.0-66849095567&doi=10.1021%2fcm803153m&partnerID=40&md5=202b5c97a590d1e6a00beb72c3bf8cc8},
}

@Article{Wang_2002,
