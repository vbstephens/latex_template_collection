@Article{Sander_2011,
  author          = {Sander, M. and Patterson, R.I.A. and Braumann, A. and Raj, A. and Kraft, M.},
  title           = {Developing the PAH-PP soot particle model using process informatics and uncertainty propagation},
  journal         = {Proceedings of the Combustion Institute},
