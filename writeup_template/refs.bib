  file            = {:Zhao_2015_fractal_aggregate_coagulation.pdf:PDF},
  source          = {Scopus},
  url             = {https://www.scopus.com/inward/record.uri?eid=2-s2.0-84929455830&doi=10.1016%2fj.jaerosci.2015.04.006&partnerID=40&md5=506a61b5a3e7ddf0a9a6b821525c23b8},
}

@Article{Kostoglou_2001a,
  author        = {Kostoglou, M. and Karabelas, A.J.},
