  source          = {Scopus},
  url             = {https://www.scopus.com/inward/record.uri?eid=2-s2.0-47849104300&doi=10.1016%2fj.ces.2008.05.012&partnerID=40&md5=3364be21bc4a7dd43798979952c54d33},
}

@Article{Sung_1998,
