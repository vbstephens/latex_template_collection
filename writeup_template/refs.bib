}

@Article{Gilfanov_2016,
  author          = {Gilfanov, A.K.a and Koch, W.b and Zaripov, S.K.a},
  title           = {Mathematical modeling of di-ethyl-hexyl-sebacate nanoparticle formation in a free turbulent jet under high nucleation rate conditions},
