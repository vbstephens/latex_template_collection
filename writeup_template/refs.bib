  file     = {:Hong_2005_soot_in_engines.pdf:PDF},
  keywords = {Soot emissions modeling, Computational engine simulations},
  url      = {http://www.sciencedirect.com/science/article/pii/S0010218005001197},
}

@Article{Lindstedt_2005a,
  author   = {R.P. Lindstedt and H.C. Ozarovsky},
  title    = {Joint scalar transported PDF modeling of nonpiloted turbulent diffusion flames},
